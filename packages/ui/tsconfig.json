{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "declarationDir": "./dist/types",
    /* to do change to verbatimModuleSyntax when vsc-tsc uses ts 5  */
    "verbatimModuleSyntax": false,
    /* when @vue/tsconfig/is fixed  */
    "ignoreDeprecations": "5.0",
    "types": [
      "vite/client",
      "vitest/globals"
    ]
  },
  "include": [
    "src/env.d.ts",
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "**/*.stories.ts"
  ]
}
